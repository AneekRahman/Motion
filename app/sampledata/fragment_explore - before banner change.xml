<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ExploreFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/main_linear_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:paddingTop="10dp">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_search_icon"
                   android:paddingTop="10dp"
                   android:paddingBottom="10dp"
                   android:paddingLeft="14dp"
                   android:paddingRight="14dp"
                   android:background="@drawable/explore_search_bg"
                   android:text="Search username, videos"
                   android:fontFamily="@font/varela_round_regular"
                   android:drawablePadding="10dp"
                   android:textSize="14sp"
                   android:gravity="center_vertical"
                   android:textColor="@color/navIconSelected"/>

               <ImageView
                   android:id="@+id/global_toggle"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   app:srcCompat="@drawable/ic_orbit_icon_stroke"
                   android:padding="10dp"
                   android:layout_marginLeft="10dp"
                   android:background="@drawable/explore_search_bg"/>

           </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="10dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rocky_img"
                        android:scaleType="centerCrop"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#73000000"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending R/N"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#fff"
                        android:fontFamily="@font/varela_round_regular"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/ic_star_icon"
                        android:drawablePadding="4dp"/>

                    <!-- Trending 3 row list -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">

                        <!-- Top trending rows start -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#40ffffff"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ciacus_img"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@aneek_rahman"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exampleText"
                                    android:textColor="#d1d1d1"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28M"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="views"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#40ffffff"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ciacus_img"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@marvel_studios"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exampleText"
                                    android:textColor="#d1d1d1"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28M"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="views"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#40ffffff"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ciacus_img"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@the_real_nibba"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textStyle="bold"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exampleText"
                                    android:textColor="#d1d1d1"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:layout_marginLeft="10dp"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginRight="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28M"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="views"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/varela_round_regular"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Top trending rows end -->

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="@drawable/top_trending_gradient"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="see more"
                        android:textColor="#fff"
                        android:fontFamily="@font/varela_round_regular"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <com.motion.app.Classes.ExpandableHeightGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@android:color/transparent"
                android:paddingLeft="1dp"
                android:numColumns="3"
                android:verticalSpacing="1dp"/>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>